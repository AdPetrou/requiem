							<image path="fomod\images\Requiem.jpg"/>
							<files>
							<folder source="core" destination="." priority="0"/>
							<file source="plugin\Requiem.esp" destination="Requiem.esp" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Required"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
