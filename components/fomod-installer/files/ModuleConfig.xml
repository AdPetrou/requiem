		<!--Font Options-->
		<installStep name="Font">
			<optionalFileGroups order="Explicit">
				<group name="Font" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Kingthings Petrock">
							<description>
								Install the Kingthings Petrock font, the traditional Requiem font.

Does not support non-latin languages.
							</description>
							<image path="fomod\images\potato_kingthings.jpg"/>
							<files>
							<folder source="fomod\options\fonts\Kingthings Petrock" destination="." priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Use current font">
							<description>
								Do not install any font files and use the standard Skyrim font or whichever font mod you have installed.
							</description>
							<image path="fomod\images\potato_vanilla.jpg"/>
							<conditionFlags>
								<flag name="ThisDoesNothing">On</flag>
							</conditionFlags>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
		<!--Gameplay Options: Messages and Sounds-->
		<installStep name="Optional Plugins">
			<optionalFileGroups order="Explicit">
				<group name="Optional Plugins" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="No Messages">
							<description>
								Suppress "I cannot do this"-like notifications.
							</description>
							<files>
								<file source="fomod\options\esp\No Messages\Requiem - No Messages.esp" destination="Requiem - No Messages.esp" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="No Overencumbered Messages">
							<description>
								Being overencumbered will not trigger the recurring notifications.
							</description>
							<files>
								<file source="fomod\options\esp\No Overencumbered Messages\Requiem - No Overencumbered Messages.esp" destination="Requiem - No Overencumbered Messages.esp" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Restored Rewarding Sounds">
							<description>
								Requiem disables the sound notifications for level-ups and similar events. Install this plugin if you want to keep the sound notifications from Vanilla Skyrim.
							</description>
							<files>
								<file source="fomod\options\esp\Restored Rewarding Sounds\Requiem - Restored Rewarding Sounds.esp" destination="Requiem - Restored Rewarding Sounds.esp" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Restored Saving Messages">
							<description>
								Enable this optional plugin if you want to get a notification text to confirm your save and load operations.
							</description>
							<files>
								<file source="fomod\options\esp\Restored Saving Messages\Requiem - Restored Saving Messages.esp" destination="Requiem - Restored Saving Messages.esp" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
