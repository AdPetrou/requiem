<Window x:Class="Reqtificator.Gui.PatchingFinishedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reqtificator.Gui"
        mc:Ignorable="d"
        Title="Patching Finished" Width="400" ResizeMode="NoResize" SizeToContent="Height">

    <StackPanel>
        <local:DynamicRichTextBox Message="{Binding Message}" IsReadOnly="True" IsDocumentEnabled="True"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding CloseCommand}">Close</Button>
        </StackPanel>
    </StackPanel>
</Window>
